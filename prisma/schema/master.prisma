// Master data models

model Designation {
  id        String   @id @default(uuid())
  name      String   @unique
  status    String   @default("active")
  createdBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model JobType {
  id        String   @id @default(uuid())
  name      String   @unique
  status    String   @default("active")
  createdBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Qualification {
  id            String   @id @default(uuid())
  instituteName String
  qualification String
  country       String
  city          String
  subDepartment String?
  status        String   @default("active")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

