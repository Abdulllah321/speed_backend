model LeaveType {
  id                String              @id @default(uuid())
  name              String              @unique
  status            String              @default("active")
  createdById       String?
  createdBy         User?               @relation("LeaveTypeCreatedBy", fields: [createdById], references: [id])
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  leavesPolicyItems LeavesPolicyItem[]
}

model LeavesPolicy {
  id                      String              @id @default(uuid())
  name                    String              @unique
  dateFrom                DateTime
  dateTill                DateTime
  fullDayDeductionRate    Decimal             @default(1.0)
  halfDayDeductionRate    Decimal             @default(0.5)
  shortLeaveDeductionRate Decimal             @default(0.25)
  status                  String              @default("active")
  createdById             String?
  createdBy               User?               @relation("LeavesPolicyCreatedBy", fields: [createdById], references: [id])
  createdAt               DateTime            @default(now())
  updatedAt               DateTime            @updatedAt
  items                   LeavesPolicyItem[]
}

model LeavesPolicyItem {
  id             String        @id @default(uuid())
  leavesPolicyId String
  leavesPolicy   LeavesPolicy  @relation(fields: [leavesPolicyId], references: [id], onDelete: Cascade)
  leaveTypeId    String
  leaveType      LeaveType     @relation(fields: [leaveTypeId], references: [id], onDelete: Cascade)
  quantity       Int
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@unique([leavesPolicyId, leaveTypeId])
}

